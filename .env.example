# Environment Configuration

## AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

## Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_AGENT_RUNTIME_REGION=us-east-1
NOVA_ACT_MODEL_ID=amazon.nova-act-v1:0

## DynamoDB Configuration
DYNAMODB_TABLE_NAME=compliance-guardian-memory
DYNAMODB_ENDPOINT_URL=  # Leave empty for AWS, set for local DynamoDB

## API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

## Security
KMS_KEY_ID=your_kms_key_id
JWT_SECRET_KEY=your_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

## Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=10MB

## CloudWatch
CLOUDWATCH_NAMESPACE=ComplianceGuardianAI
CLOUDWATCH_LOG_GROUP=/aws/compliance-guardian

## Feature Flags
ENABLE_AUTO_REMEDIATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true

## Integration Configuration
GITHUB_TOKEN=your_github_token
GITLAB_TOKEN=your_gitlab_token

## Database Configuration (for scanning)
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=compliance_db

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=compliance_db

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=compliance_db

## Report Output
REPORT_OUTPUT_DIR=./reports
EXPORT_OUTPUT_DIR=./exports

## Compliance Thresholds
COMPLIANCE_TARGET_SCORE=90
AUTO_APPROVE_RISK_THRESHOLD=30
AUTO_ESCALATE_RISK_THRESHOLD=80
HIGH_COST_THRESHOLD=100000

## Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_EMAIL=compliance-team@example.com

## Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#compliance-alerts

## Caching
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379/0  # Optional
